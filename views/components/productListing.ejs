<% products.forEach(product => { %>

    <div class="shadow-lg bg-white h-full rounded-lg flex flex-col justify-between border-grey-100 border-2">
        <div class="mb-3 text-center">
            <a href="/marketplace/<%= product.id %>" alt="see product <%= product.productName %>">
                <img src="/uploads/<%= product.picture %>.jpg" alt="<%= product.productName %>"
                     class="h-40 m-auto rounded-lg mt-2 object-center">
                <p class="text-lg font-semibold ml-2 mb-1"><%= product.productName %></p>
            </a>
        </div>
        <div>
            <p class="text-lime-700 font-semibold text-center mb-2"><%= product.price %>â‚¬</p>
            <div class="flex justify-around px-2 pb-2">
                <% if (currentUser) { %>
                    <% if(product.userID !== currentUser.id)  { %>
                        <% if (product.isBookmarked ) { %>
                            <button onclick="toggleBookmark(<%= product.id %>)"
                                    class="bookmark-icon bookmarked"
                                    data-product-id="<%= product.id %>">
                                <img src="/icons/bookmarkFilled.png" class="h-6" alt="bookmarked">
                            </button>
                        <% } else { %>
                            <button onclick="toggleBookmark(<%= product.id %>)" class="bookmark-icon"
                                    data-product-id="<%= product.id %>">
                                <img src="/icons/bookmark.png" class="h-6" alt="bookmark">
                            </button>
                        <% } %>
                    <% } %>
                <% } %>
                <a href="mailto:<%= product.email %>?subject=Interest%20In%20<%= product.productName %>"
                   class="bg-lime-200 text-white rounded-full px-3 font-semibold max-w-fit">
                    <img src="/icons/mail.png" class="h-6" alt="contact">
                </a>
            </div>
        </div>
    </div>
<% }) %>