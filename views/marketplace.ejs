<div class="max-w-5xl mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6">
    <% products.forEach(singleProduct => { %>

        <div class="shadow-lg bg-white rounded-lg flex flex-col justify-between border-grey-50 border">
            <a href="./marketplace/<%= singleProduct.id %>" alt="see product <%= singleProduct.productName %>">
                <img src="./uploads/<%= singleProduct.picture %>.jpg" alt="<%= singleProduct.productName %>" class="h-40 w-10/12 m-auto rounded-lg mt-2 object-cover">
