<!doctype html>
<html lang="en">
<head>
    <%- include('components/htmlHead') %>
</head>
<body class="min-h-screen bg-gradient-to-b from-emerald-50 to-emerald-200 max-w-3xl m-auto">
<div class="flex justify-center content-center my-5">
    <img src="./icons/logo.png" alt="Logo" class="h-20">
    <h1 class="font-bold text-6xl font-kaushanScript">ThreadedTenderly</h1>
</div>

<div class="grid grid-cols-6">
    <div class="col-span-4 col-start-2">
        <%- include('components/h1Heading', {heading: 'Register'} ) %>

        <form action="/register" method="POST"
              class="w-full flex flex-col justify-center content-center bg-white px-3 pt-3 rounded-xl shadow-xl">

            <div class="grid grid-cols-2 gap-x-4">
                <div>
                    <%- include('./components/inputLabel', { labelFor: 'name', content: 'First Name'}) %>

                    <%- include('./components/textInput', { name: 'name', required: 'yes' }) %>
                </div>
                <div>
                    <%- include('./components/inputLabel', { labelFor: 'surname', content: 'Last Name'}) %>
                    <%- include('./components/textInput', { name: 'surname', required: 'yes' }) %>
                </div>
            </div>


            <%- include('./components/inputLabel', { labelFor: 'username', content: 'Username'}) %>
            <% if (message) { %>
                <div class="mb-2 text-red-500"><%= message %></div>
            <% } %>
            <%- include('./components/textInput', { name: 'username', required: 'yes' }) %>


            <%- include('./components/inputLabel', { labelFor: 'email', content: 'E-Mail'}) %>
            <%- include('./components/textInput', { name: 'email', required: 'yes' }) %>


            <%- include('./components/inputLabel', { labelFor: 'password', content: 'Preferred Craft (optional)'}) %>
            <div class="grid grid-cols-3 mb-2 ml-3">
                <%- include('./components/radioInput', { name: 'craft', options: ['sewing', 'knitting', 'crocheting', 'embroidery', 'tailoring', 'other'], selectedValue: '' }) %>
            </div>


            <%- include('./components/inputLabel', { labelFor: 'password', content: 'I want to primarily (optional)'}) %>
            <div class="grid grid-cols-3 mb-2 ml-3">
                <%- include('./components/radioInput', { name: 'incentive', options: ['buy clothes', 'sell clothes'], selectedValue: '' }) %>
            </div>


            <%- include('./components/inputLabel', { labelFor: 'password', content: 'Password'}) %>
            <%- include('./components/passwordInput', { name: 'password', required: 'yes' }) %>

            <div class="grid grid-cols-3">
                <button type="submit" value="register"
                        class="col-start-2 bg-teal-700 hover:bg-teal-950 hover:scale-110 transition-transform duration-200 text-white rounded-full p-1 mb-3 my-3 font-semibold">
                    Register
                </button>

            </div>
        </form>

        <div class="text-center my-4">
            <p class="mb-2">Already have an account? <a href="/login" class="underline text-indigo-900">Login</a></p>
            <a href="/marketplace" class="underline text-indigo-900">Shop now</a>
        </div>
    </div>
</div>
</body>
</html>