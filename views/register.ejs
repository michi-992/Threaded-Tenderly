<!doctype html>
<html lang="en">
<head>
    <%- include('htmlHead') %>
</head>
<body class="min-h-screen bg-gradient-to-b from-emerald-50 to-emerald-200 max-w-3xl m-auto">
<div class="flex justify-center content-center my-3">
    <img src="./icons/logo.png" alt="logo" class="h-20">
    <h1 class="font-bold text-6xl font-kaushanScript">ThreadedTenderly</h1>
</div>

<div class="grid grid-cols-6">
    <div class="col-span-4 col-start-2">
        <h1 class="text-5xl ml-5">Register</h1>
        <form action="/register" method="POST"
              class="w-full flex flex-col justify-center content-center bg-white px-3 pt-3 rounded-xl shadow-xl">

            <div class="grid grid-cols-2 gap-x-4">
                <%- include('./components/inputLabel', { labelFor: 'name', content: 'First Name'}) %>
                <%- include('./components/inputLabel', { labelFor: 'surname', content: 'Last Name'}) %>
                <input type="text" id="name" name="name" required class="w- border-emerald-200 border-4 rounded-full py-1 px-3 mb-2">
                <input type="text" id="surname" name="surname" required class="border-emerald-200 border-4 rounded-full py-1 px-3 mb-2">
            </div>

            <%- include('./components/inputLabel', { labelFor: 'username', content: 'Username'}) %>
            <input type="text" id="username" name="username" required class="border-emerald-200 border-4 rounded-full py-1 px-3 mb-2">

            <%- include('./components/inputLabel', { labelFor: 'email', content: 'E-Mail'}) %>
            <input type="email" id="email" name="email" required class="border-emerald-200 border-4 rounded-full py-1 px-3 mb-2">


            <%- include('./components/inputLabel', { labelFor: 'craft', content: 'Preferred Craft'}) %>
            <div class="grid grid-cols-3 mb-2 ml-3">
                <%- include('./components/radioInput', { name: 'craft', options: ['sewing', 'knitting', 'crocheting', 'embroidery', 'tailoring', 'other'], selectedValue: '' }) %>
            </div>


            <label for="incentive" class="italic font-semibold ml-3">I want to primarily</label>
            <div class="grid grid-cols-3 mb-2 ml-3">
                <%- include('./components/radioInput', { name: 'incentive', options: ['buy clothes', 'sell clothes'], selectedValue: '' }) %>
            </div>

            <%- include('./components/inputLabel', { labelFor: 'password', content: 'Password'}) %>
            <%- include('./components/passwordInput', { name: 'password' }) %>

            <div class="grid grid-cols-3 mb-4">
                <button type="submit" class="col-start-2 bg-teal-700 text-white font-semibold rounded-full py-1 px-3 my-3">
                    Register
                </button>
            </div>
        </form>
    </div>
</div>
</body>
</html>